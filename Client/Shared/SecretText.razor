<code>
    @if (IsVisible)
    {
        @Text
    }
    else
    {
        @(new String('*', Text.Length))
    }
</code>
<button @onclick="ToggleDisplay" type="button" class="btn mx-1">
    @if (IsVisible)
    {
        <span class="oi oi-lock-unlocked" aria-hidden="true"></span>
    }
    else
    {
        <span class="oi oi-lock-locked" aria-hidden="true"></span>
    }
</button>

@code {
    [Parameter]
    public bool IsVisible { get; set; }
    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter]
    public string Text { get; set; }

    private async Task ToggleDisplay()
    {
        IsVisible = !IsVisible;
        await IsVisibleChanged.InvokeAsync();
    }

}
